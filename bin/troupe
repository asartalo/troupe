#!/usr/bin/env php
<?php
ini_set('error_reporting', E_ALL | E_STRICT);
require_once realpath(__DIR__ . '/../src/SplClassLoader.php');
$path = realpath(__DIR__ . '/../src/');
$classLoader = new SplClassLoader('Troupe', $path);
$classLoader->register();

$data_dir = realpath(__DIR__ . '/../data');
$scope = new \Troupe\EnvironmentScope(
  $_ENV, getcwd(), $data_dir, $argv
);
\Troupe\Injector::injectEnvironmentHelper($scope)->run();
?>

